/**
 * ---------------------------------------------------------------------------------------------------- #
 *
 * Main Stylesheet entry file
 *
 * all imported files will be bundled to styles.css
 * in this file it is possible to include files with globbing
 * to include CSS files, just omit the file extension
 */
<% if (config.get('features').includes('webfonts')) { -%>

// Webfonts
@import "webfonts";
<% } -%>

// Foundation utils (mixins)
@import 'node_modules/foundation-sites/scss/util/util';

// Variables
@import "variables/**/*.scss";

// Foundation
@import "foundation";

// Mixins
@import "mixins/**/*.scss";

// Extends
@import "extends/**/*.scss";
<% if (config.get('features').includes('svgBackgrounds')) { -%>

// SVG Background Icons (will be generated by grunt)
@import "../../tmp/svg-scss/_svg-icon-map.scss";
<% } -%>

// Basic Formatting
@import "basics";
<% if (config.get('libraries').includes('swiper')) { -%>

// Swiper core styles
@import "node_modules/swiper/src/swiper";
<% } -%>

// All Components
@import "blocks/**/*.scss";
@import "../components/**/*.scss";
