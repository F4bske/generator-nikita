.b-dialog {
    &::backdrop {
        background: rgba(0, 0, 0, 0.1);
    }

    .backdrop {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1;
        background: rgba(0, 0, 0, 0.1);
    }

    /* hide custom backdrop when native dialogs are supported */
    &[data-a11y-dialog-native] .backdrop {
        display: none;
    }

    /* ensure layout if dialog element is not supported */
    .dialog[open] {
        z-index: 2;
        display: block;
    }

    &[aria-hidden='true'] {
        display: none;
    }
}
