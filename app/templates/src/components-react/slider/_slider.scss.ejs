.b-slider {
    position: relative;
    width: 80%;
    margin: 0 auto;

    .slide-container {
        //
    }

    .slide {
        min-height: 200px;
        text-align: center;
        background-color: $bg-color-06;
    }

    .prev {
        position: absolute;
        top: 50%;
        left: 0;
        padding: 10px;
    }

    .next {
        position: absolute;
        top: 50%;
        right: 0;
        padding: 10px;
    }
}
