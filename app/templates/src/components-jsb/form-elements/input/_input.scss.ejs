.b-input {
    .input-field {
        display: block;
        width: 100%;
        height: 3.8rem;
        outline: 0;
        border: none;
        border-radius: 4px;
        padding: 0 .5rem;
        font-size: $base-fontsize;
        transition: border-color .2s;

        &:not([type="file"]) {
            border: 1px solid $line-color-04;
        }

        &:not(:disabled) {
            &:hover {
                border-color: $line-color-03;
            }

            &:focus {
                border-color: $line-color-06;
            }
        }

        &:disabled {
            color: $text-color-03;
            background-color: $bg-color-04;

            ::placeholder {
                color: $text-color-03;
            }
        }
    }
}
